<% layout('layout') -%>

<div class="row">
    <div class="col-lg-6 col-md-offset-3">
        <div class="container">
        <form method="post">
            <h2 class="text-muted heading">Login</h2>
            <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input name="email" type="email" class="form-control" id="email" placeholder="Email">
            </div>
            </div>
            <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            </div>
            </div>
            <% if (message.length > 0) { %>
            <div class="form-group row">
            <label for="error" class="col-sm-2 col-form-label error-label">Error</label>
            <div class="col-sm-10">
                <div id="error" class="alert alert-danger col-sm-10" role="alert">
                    <strong>Oh snap!</strong> <%= message %>
                </div>
            </div>
            </div>
            <% } %>
            <% if (success.length > 0) { %>
            <div class="form-group row">
            <label for="success" class="col-sm-2 col-form-label">Success</label>
            <div class="col-sm-10">
                <div id="success" class="alert alert-success col-sm-10" role="alert">
                    <strong>Heads up!</strong> <%= success %>
                </div>
            </div>
            </div>
            <% } %>
            <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="/forgot-password" class="offset-sm-2 col-sm-10">Forgot Password?</a>
            </div>
            </div>
        </form>
        </div>
    </div>
</div>