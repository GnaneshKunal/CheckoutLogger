<% layout('layout') -%>

<div class="row">
    <div class="col-lg-6 col-md-offset-3">
        <div class="container">
        <form method="post" enctype="multipart/form-data">
            <h2 class="text-muted heading">Edit Profile</h2>
            <div class="form-group row">
            <label for="picture" class="col-sm-2 col-form-label">Picture</label>
            <div class="col-sm-10">
                <img name="picture" src="<%= user.profile.picture %>" class="card-img-profile pro-img" id="picture" />
                <div class="form-group">
                    <input type="file" class="form-control-file" name="profilePhoto" id="profilePhoto" aria-describedby="fileHelp">
                    <small id="fileHelp" class="form-text text-muted">upload an image for profile picture</small>
                </div>
            </div>
            </div>
            <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input name="name" value="<%= user.profile.name %>" type="text" class="form-control" id="name" placeholder="Name">
            </div>
            </div>
            <% if (message.length > 0) { %>
            <div class="form-group row">
            <label for="success" class="col-sm-2 col-form-label">Success</label>
            <div class="col-sm-10">
                <div id="success" class="alert alert-success col-sm-10" role="alert">
                    <strong>Heads up!</strong> <%= message %>
                </div>
            </div>
            </div>
            <% } %>
            <% if (error.length > 0) { %>
            <div class="form-group row">
            <label for="error" class="col-sm-2 col-form-label error-label">Error</label>
            <div class="col-sm-10">
                <div id="error" class="alert alert-danger col-sm-10" role="alert">
                    <strong>Oh snap!</strong> <%= error %>
                </div>
            </div>
            </div>
            <% } %>
            <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            </div>
        </form>
        </div>
    </div>
</div>