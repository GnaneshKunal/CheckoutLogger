<% layout('layout') -%>

<div class="row">
    <div class="col-lg-6 col-md-offset-3">
        <div class="container">
        <form method="post">
            <h2 class="text-muted heading">Edit Profile</h2>
            <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input name="name" value="<%= user.profile.name %>" type="text" class="form-control" id="email" placeholder="Name">
            </div>
            </div>
            <% if (message.length > 0) { %>
            <div class="form-group row">
            <label for="success" class="col-sm-2 col-form-label">Success</label>
            <div class="col-sm-10">
                <div id="success" class="alert alert-success col-sm-10" role="alert">
                    <strong>Heads up!</strong> <%= message %>
                </div>
            </div>
            </div>
            <% } %>
            <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            </div>
        </form>
        </div>
    </div>
</div>