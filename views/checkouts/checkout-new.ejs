<% layout('layout') -%>
<div class="jumbotron">
    <div class="container">
        <form method="post" enctype="multipart/form-data">
            <h2 class="text-muted heading">New Checkout</h2>
            <div class="form-group row">
                <label for="picture" class="col-sm-2 col-form-label">Picture</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="file" class="form-control-file" name="checkout" id="checkout" aria-describedby="fileHelp">
                        <small id="fileHelp" class="form-text text-muted">upload an image</small>
                    </div>
                </div>
            </div>
            <% if (error.length > 0) { %>
            <div class="form-group row">
                <div id="error" class="alert alert-danger col-sm-10" role="alert">
                    <strong>Oh snap!</strong> <%= error %>
                </div>
            </div>
            <% } %>
            <p class="lead">
                <button type="submit" class="btn btn-primary">upload</button>
            </p>
        </form>
    </div>
</div>