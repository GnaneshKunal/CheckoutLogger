<% layout('layout') -%>
<div class="jumbotron">
        <h1 class="display-7">Your latest checkout: </h1>
        <table class="table table-sm" style="display: inline;">
            <% if (checkout.length == 0) {%>
                <p>You don&#39;t have any checkouts yet</p>
            <% } else { %>
                <thead>
                    <tr>
                    <th>#</th>
                    <th><%= checkout.title %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">1</th>
                    <td>Bill Id</td>
                    <td><%= checkout.bill_id %></td>
                    </tr>
                    <tr>
                    <th scope="row">2</th>
                    <td>Description</td>
                    <td><%= checkout.description %></td>
                    </tr>
                    <tr>
                    <th scope="row">3</th>
                    <td>Date</td>
                    <td><%= checkout.date.toDateString() %></td>
                    </tr>
                    <tr>
                    <th scope="row">4</th>
                    <td>Location</td>
                    <td style="width:200px">
                            <%= checkout.location %> 
                    </td>
                    </tr>
                    <tr>
                    <th scope="row">5</th>
                    <td>Tax</td>
                    <td><%= checkout.total_tax %></td>
                    </tr>
                    <th scope="row">6</th>
                    <td>Total</td>
                    <td><%= checkout.total %></td>
                    </tr>
                </tbody>
            <% } %>
            </table>
            <p class="lead">
                <p class="ck-btn"><a class="btn btn-success" href="/checkout-new" role="button">Checkout</a></p>
                <p class="ck-btn"><a class="btn btn-secondary" href="/checkout-history" role="button">History</a></p>
            </p>
           </div>

