<% layout('layout') -%>
<div class="jumbotron">
        <h1 class="display-7">Your Checkout: </h1>
        <table class="table table-sm" style="display: inline;">
            <% if (checkout.length == 0) {%>
                <p>You don&#39;t have any checkouts yet</p>
            <% } else { %>
                <thead>
                    <tr>
                    <th>#</th>
                    <th><%= checkout.title %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">1</th>
                    <td>Bill Id</td>
                    <td><%= checkout.bill_id %></td>
                    </tr>
                    <tr>
                    <th scope="row">2</th>
                    <td>Description</td>
                    <td><%= checkout.description %></td>
                    </tr>
                    <tr>
                    <th scope="row">3</th>
                    <td>Date</td>
                    <td><%= checkout.date.toDateString() %></td>
                    </tr>
                    <tr>
                    <th scope="row">4</th>
                    <td>Location</td>
                    <td style="width:200px">
                            <%= checkout.location %>      
                    </td>
                    </tr>
                    <tr>
                    <th scope="row">5</th>
                    <td>Tax</td>
                    <td><%= checkout.total_tax %></td>
                    </tr>
                    <th scope="row">6</th>
                    <td>Total</td>
                    <td><%= checkout.total %></td>
                    </tr>
                </tbody>
            <% } %>
            </table>
            <div class="text-center">
                <img class="bill-self" src="<%= checkout.bill_picture %>" class="rounded" alt="...">
            </div>
            
            <% if (success.length > 0) { %>
                    <div class="form-group row">
                    <label for="success" class="col-sm-2 col-form-label error-label"></label>
                    <div class="col-sm-10">
                        <div id="success" class="alert alert-success col-sm-10" role="alert">
                            <strong>Heads up!</strong> <%= success %>
                        </div>
                    </div>
                    </div>
            <% } %>
            <p class="lead">
                <p class="ck-btn"><a class="btn btn-success" href="/checkout-history#<%= checkout._id %>" role="button">Go Back</a></p>
                <p class="ck-btn"><a class="btn btn-secondary" href="/checkout-edit/<%= checkout._id %>" role="button">Edit Checkout</a></p>
                <p class="ck-btn"><a class="btn btn-secondary" href="/checkout-delete/<%= checkout._id %>" role="button">Delete Checkout</a></p>
            </p>
           </div>