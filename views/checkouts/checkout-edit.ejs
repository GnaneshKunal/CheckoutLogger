<% layout('layout') -%>
<div class="jumbotron">
        <h1 class="display-7">Your Checkout: </h1>
        <form method="POST">
            <table class="table table-sm" style="display: inline;">
                  <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Bill Id: </label>
                      <div class="col-sm-10">
                        <p class="form-control-static"><%= checkout.bill_id %></p>
                      </div>
                  </div>

                  <div class="form-group row">
                    <label for="title" class="col-2 col-form-label">Title:</label>
                    <div class="col-10">
                      <input class="form-control" name="title" type="text" value="<%= checkout.title %>" id="title">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="description" class="col-2 col-form-label">Description:</label>
                    <div class="col-10">
                      <input name="description" class="form-control" type="text" value="<%= checkout.description %>" id="description">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="datetime-local" class="col-2 col-form-label">Date and time</label>
                    <div class="col-10">
                      <input class="form-control" name="date_time" type="datetime-local" value="<%= date %>" id="datetime-local">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="tax" class="col-2 col-form-label">Tax:</label>
                    <div class="col-10">
                      <input class="form-control" type="number" name="tax" step="0.01" value="<%= checkout.total_tax %>" id="tax">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="total" class="col-2 col-form-label">Total:</label>
                    <div class="col-10">
                      <input class="form-control" type="number" name="total" step="0.01" value="<%= checkout.total %>" id="total">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="location" class="col-2 col-form-label">Location:</label>
                    <div class="col-10">
                      <input class="form-control" type="text" name="location" value="<%= checkout.location %>" id="location">
                    </div>
                  </div>
                </table>
            <div class="text-center">
                <img class="bill-self" src="<%= checkout.bill_picture %>" class="rounded" alt="...">
            </div>
            <% if (error.length > 0) { %>
            <div class="form-group row">
            <label for="error" class="col-sm-2 col-form-label error-label">Error</label>
            <div class="col-sm-10">
                <div id="error" class="alert alert-danger col-sm-10" role="alert">
                    <strong>Oh snap!</strong> <%= error %>
                </div>
            </div>
            </div>
            <% } %>
            <p class="lead">
                <p class="ck-btn"><a class="btn btn-success" href="/checkout/<%= checkout._id %>" role="button">Cancel</a></p>
                <p class="ck-btn"><input class="btn btn-secondary" type="submit" value="Save Changes" /></p>
            </p>
            </form>
</div>
